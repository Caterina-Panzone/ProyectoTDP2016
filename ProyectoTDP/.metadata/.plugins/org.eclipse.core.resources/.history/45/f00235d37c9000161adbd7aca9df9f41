package Juego;

import java.util.List;

import Tanques.*;
import Juego.Mapa;

public class ControladorDisparos extends Thread{
    protected Logica logica;
	protected List<Disparo> disparos;
	private volatile boolean ejecutar; 
	protected Mapa mapa;
	
	public ControladorDisparos(List<Disparo> disparos, Mapa mapa, Logica logica){
		this.disparos = disparos; 
		this.mapa=mapa;
		this.logica=logica;
	}
	
	public void terminate(){
		ejecutar = false; 
	}
	
	public void run() {
		ejecutar = true; 
		while(ejecutar){
			try {
				for(int i=0; i<disparos.size(); i++){
					disparos.get(i).avanzar(mapa, disparos); 
					logica.repaint();
				}
				Thread.sleep(100);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
}
